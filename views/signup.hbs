<!DOCTYPE html>
<html>
  <head>
    <title>MediConsulta</title>
    <meta charset="utf-8">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" type="text/css" href="/css/materialize.css">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body class="blue-grey darken-3">
    {{> header}}

    <div id='hideblock'></div>

    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card white darken-1">
          <div class="card-content black-text">
            <span class="card-title">Crea tu cuenta:</span>
            <div class="row">

              <form method="post" action="/agregarPaciente" class="col s12">

                <div class="row">
                  <div class="input-field col s4">
                    <input name="nombre" type="text" class="validate">
                    <label for="nombre">Nombre</label>
                  </div>
                  <div class="input-field col s4">
                    <input name="snombre" type="text" class="validate">
                    <label for="snombre">Segundo Nombre</label>
                  </div>
                  <div class="input-field col s4">
                    <input name="apellido" type="text" class="validate">
                    <label for="apellido">Apellido</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s6">
                    <!-- <input id="fecha" type="text" class="datepicker" name="fecha"> -->
                    <input name="fecha" type="date" class="validate">
                    <label for="fecha"></label>
                  </div>

                  <div class="input-field col s6">
                    <input name="cedula" type="text" class="validate">
                    <label for="cedula">Cedula</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s6">
                    <input name="sexo" type="text" class="validate">
                    <label for="sexo">Sexo ('H' o 'M')</label>
                  </div>
                  <div class="input-field col s6">
                    <input name="sangre" type="text" class="validate">
                    <label for="sangre">Sangre ('A+','A-','B+','B-','AB+','AB-','O+','O-')</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s6">
                    <input name="lugarnacimiento" type="text" class="validate">
                    <label for="lugarnacimiento">Lugar de Nacimiento</label>
                  </div>
                  <div class="input-field col s6">
                    <input name="referenciado" type="text" class="validate">
                    <label for="referenciado">Referenciado por:</label>
                  </div>
                </div>

                <!-- <p>
                   <input type="checkbox" class="filled-in" id="fumado" />
                   <label for="fumado">Ha Fumado</label>
                 </p>
                 <p>
                   <input type="checkbox" class="filled-in" id="donadoorgano" />
                   <label for="donadoorgano">Ha Donado Organo</label>
                </p>
                <p>
                  <input type="checkbox" class="filled-in" id="donadosangre" />
                  <label for="donadosangre">Ha Donado Sangre</label>
                </p> -->
                <div class="card-action center">
                  <input type="submit" value="Crear cuenta e ingresar" class="btn">
                </div>
              </form>

            </div>
          </div>

        </div>
      </div>
    </div>
    <script type="text/javascript">

    $('.datepicker').pickadate({
      selectMonths: true, // Creates a dropdown to control month
      selectYears: 15, // Creates a dropdown of 15 years to control year,
      today: 'Today',
      clear: 'Clear',
      close: 'Ok',
      closeOnSelect: false // Close upon selecting a date,
    });
    </script>
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
  </body>
</html>
